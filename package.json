{
    "name": "nvidia-smi-memory",
    "displayName": "nvidia-smi-memory",
    "description": "Show GPU memory usage on status bar",
    "icon": "icon.png",
    "version": "0.2.0",
    "publisher": "yohan-pg",
    "license": "MIT",
    "repository": "https://github.com/yohan-pg/nvidia-smi-memory",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Nvidia-smi GPU status configuration",
            "properties": {
                "nvidia-smi.drawtype": {
                    "type": "string",
                    "default": "emoji",
                    "description": "GPU indicator styles",
                    "enum": [
                        "circle",
                        "bar",
                        "recycle",
                        "die",
                        "clock",
                        "line",
                        "pile",
                        "digit",
                        "circledigit",
                        "negativecircledigit",
                        "wan",
                        "tiao",
                        "bing",
                        "emoji"
                    ]
                }
            }
        },
        "commands": [
            {
                "command": "extension.nvidia-smi",
                "title": "Update nvidia-smi"
            },
            {
                "command": "extension.stop_nvidia-smi",
                "title": "Stop nvidia-smi"
            },
            {
                "command": "extension.start_nvidia-smi",
                "title": "Start nvidia-smi"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "child-process-promise": "^2.2.1"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "typescript": "^2.6.1",
        "vscode": "^1.1.34"
    }
}
